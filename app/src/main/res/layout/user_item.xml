<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.example.ExampleFragment">

    <TextView
        android:id="@+id/user_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/user_id"
        android:textAlignment="textEnd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/user_name"
        app:layout_constraintEnd_toStartOf="@+id/user_id_value"
        app:layout_constraintHorizontal_weight="@integer/item_label"/>

    <TextView
        android:id="@+id/user_id_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/user_id"
        app:layout_constraintStart_toEndOf="@+id/user_id"
        app:layout_constraintBottom_toTopOf="@+id/user_name_value"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="@integer/item_content" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/user_name"
        android:textAlignment="textEnd"
        app:layout_constraintTop_toBottomOf="@+id/user_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/user_name_value"
        app:layout_constraintHorizontal_weight="@integer/item_label"/>

    <TextView
        android:id="@+id/user_name_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/user_name"
        app:layout_constraintTop_toBottomOf="@+id/user_id_value"
        app:layout_constraintStart_toEndOf="@+id/user_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="@integer/item_content" />

    <TextView
        android:id="@+id/user_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/user_phone"
        android:textAlignment="textEnd"
        app:layout_constraintTop_toBottomOf="@+id/user_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/user_phone_value"
        app:layout_constraintHorizontal_weight="@integer/item_label"/>

    <TextView
        android:id="@+id/user_phone_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/user_phone"
        app:layout_constraintTop_toBottomOf="@+id/user_name_value"
        app:layout_constraintStart_toEndOf="@+id/user_phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="@integer/item_content" />

    <TextView
        android:id="@+id/user_department"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/user_department"
        android:textAlignment="textEnd"
        app:layout_constraintTop_toBottomOf="@+id/user_phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/user_department_value"
        app:layout_constraintHorizontal_weight="@integer/item_label"/>

    <TextView
        android:id="@+id/user_department_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/user_department"
        app:layout_constraintTop_toBottomOf="@+id/user_phone_value"
        app:layout_constraintStart_toEndOf="@+id/user_department"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="@integer/item_content" />
</androidx.constraintlayout.widget.ConstraintLayout>
